@using System.Threading.Tasks
@using CoreNetDevelopment.ViewModels
@model CoreNetDevelopment.ViewModels.HomeViewModel

<h1>Welcome!</h1>
<h3>@Model.CurrentGreeting</h3>
<table class="table table-responsive">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td>@restaurant.Id</td>
            <td>@restaurant.Name</td>
            <td>@Html.ActionLink("Details", "Details", new {id = @restaurant.Id})</td>
        </tr>
    }
    </tbody>
</table>
